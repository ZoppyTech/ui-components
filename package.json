{
  "name": "ui-components",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --port 5000",
    "build": "ng build",
    "publish:button": "ng build button && cd dist/button && npm publish --access public",
    "publish:visual-identity": "ng build visual-identity && cd dist/visual-identity && npm publish --access public",
    "publish:icon": "ng build icon && cd dist/icon && npm publish --access public",
    "publish:search-bar": "ng build search-bar && cd dist/search-bar && npm publish --access public",
    "publish:checkbox": "ng build checkbox && cd dist/checkbox && npm publish --access public",
    "watch": "ng build --watch --configuration development",
    "prepare": "husky install",
    "pre-commit": "npm run pretty && npm run lint && git add -A && lint-staged",
    "pretty": "npx prettier --write ./src",
    "lint": "ng lint",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~13.3.0",
    "@angular/common": "~13.3.0",
    "@angular/compiler": "~13.3.0",
    "@angular/core": "~13.3.0",
    "@angular/forms": "~13.3.0",
    "@angular/platform-browser": "~13.3.0",
    "@angular/platform-browser-dynamic": "~13.3.0",
    "@angular/router": "~13.3.0",
    "@lucarrloliveira/button": "*",
    "@lucarrloliveira/icon": "*",
    "@lucarrloliveira/visual-identity": "*",
    "@lucarrloliveira/search-bar": "*",
    "@lucarrloliveira/checkbox": "*",
    "rxjs": "~7.5.0",
    "tslib": "^2.3.0",
    "zone.js": "^0.11.5"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~13.3.1",
    "@angular-eslint/builder": "13.2.1",
    "@angular-eslint/eslint-plugin": "13.2.1",
    "@angular-eslint/eslint-plugin-template": "13.2.1",
    "@angular-eslint/schematics": "13.2.1",
    "@angular-eslint/template-parser": "13.2.1",
    "@angular/cli": "~13.3.1",
    "@angular/compiler-cli": "~13.3.0",
    "@types/jest": "^27.4.1",
    "@types/node": "^12.20.48",
    "@typescript-eslint/eslint-plugin": "5.17.0",
    "@typescript-eslint/parser": "5.17.0",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jest-preset-angular": "^11.1.1",
    "karma-coverage": "~2.1.0",
    "lint-staged": "^12.3.8",
    "ng-packagr": "^13.3.1",
    "prettier": "^2.6.2",
    "prettier-eslint": "^13.0.0",
    "typescript": "~4.6.2"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupFilesAfterEnv": [
      "<rootDir>/setupJest.ts"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/dist/"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "<rootDir>/tsconfig.spec.json",
        "stringifyContentPathRegex": "\\.html$"
      }
    },
    "roots": [
      "<rootDir>",
      "<rootDir>/projects",
      "<rootDir>/projects/button"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "moduleDirectories": [
      "node_modules"
    ]
  }
}
